{
  "name": "@llm-orchestration/root",
  "private": true,
  "version": "0.0.0",
  "description": "Workspace root for orchestrator monorepo",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier . --config prettier.config.cjs --check",
    "format": "prettier . --config prettier.config.cjs --write",
    "prebuild": "pnpm run lint && pnpm run format:check",
    "build": "pnpm --filter @llm-orchestration/core run build"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.37.2",
    "jiti": "^2.6.1",
    "prettier": "^3.3.0",
    "typescript-eslint": "^8.0.0"
  }
}
